{
  "mcpServers": {
    "taskmaster-ai": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "--package=task-master-ai", "task-master-ai"],
      "env": {
        "TASK_MASTER_TOOLS": "default",
        "TASKMASTER_AI_PROVIDER": "claude-code",
        "TASKMASTER_AI_MODEL": "sonnet"
      }
    },
    "code-index": {
      "command": "uvx",
      "args": [
        "code-index-mcp",
        "--project-path", "."
      ]
    }
  }
}
